<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#f7f7f7"
  android:orientation="vertical">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
      android:id="@+id/close_popup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:paddingLeft="15dp"
      android:src="@drawable/delete_black" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:gravity="center"
      android:text="@string/input_password_string"
      android:textColor="#000000"
      android:textSize="20sp" />

  </RelativeLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginBottom="10dp"
    android:background="#d1d2d6" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">
    <cc.lijingbo.androidstudy.paypassword.widget.PassWordEdittext
      android:id="@+id/password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      app:bgRadius="3dp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="10dp"
      android:layout_alignParentRight="true"
      android:layout_below="@id/password"
      android:text="@string/forget_password_string"
      android:textColor="#4169E1" />


  </RelativeLayout>

  <cc.lijingbo.androidstudy.paypassword.widget.CustomKeyBoard
    android:id="@+id/customkeyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</LinearLayout>